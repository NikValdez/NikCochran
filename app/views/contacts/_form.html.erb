<div class="col-md-4 col-sm-12">
	<div class="contact-form bottom">
		<h2>Send a message</h2>
				<%= form_for @contact do |f| %>
						<%= f.label :name, class: 'contact_name' %><br>
						<%= f.text_field :name, required: true, class: "form-control" %>

						<br>
					<div class="form-group">
						<%= f.label :email %><br>
						<%= f.email_field :email, required: true, class: "form-control" %>
					</div>
						
						<br>
					<div class="form-group">
						<%= f.label :message %><br>
						<%= f.text_area :message, as: :text, class: "form-control" %>
					</div>

						<div class="hidden">
							<%= f.label :nickname %><br>
							<%= f.text_field :nickname, hint: 'leave this field blank' %>
						</div>

				  		<div class="form-group">
				  			<%= button_tag 'Send Message', class: "btn btn--border btn--primary btn--animated", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sending email..."} %>
				  		</div>
				  	
				 <% end %>
				</form>
			</div>
		</div>