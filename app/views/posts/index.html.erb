<%= render 'shared/header' %>

<body>
    <section id="blog-banner">
        <div class="vertical-center sun">
             <div class="container">
                <div class="row">
                    <div class="action">
                        <div class="col-sm-12">
                            <h1 class="title">Thoughts</h1>
                            <p>About things that interest me</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </section>
    <!--/#page-breadcrumb-->
 
    <section id="blog" class="padding-top">
       <% @posts.each do |post| %>
        <div class="container">
            <div class="row">
            
                       <div class="col-sm-12 col-md-12">
                          <div class="single-blog single-column">
                              <div class="post-thumb">
                                    <%= image_tag post.image.url(:large), size: "950x400"%>
                                     <h1 class="post-title bold"><%= post.title %></a></h1>
                                  <h3 class="post-author"><a href="#">Posted by Nik Cochran</a></h3>
                                  <div class="post-overlay">
                                     <span class="uppercase"><a href="#"><%= post.created_at.strftime("%d") %><br><small><%= post.created_at.strftime("%b") %></small></a></span>        
                                       </div>
                                  </div>
                              <div class="post-content overflow">
                                  <p><%= sanitize(post.body.html_safe.truncate(500)) %></p>
                                  <% if current_admin_user %>
                                  <td><%= link_to 'Show', post %></td>
                                  <td><%= link_to 'Edit', edit_post_path(post) %></td>
                                  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                   <%= link_to 'New Post', new_post_path %>
                                  <% else %>
                                  <% end %>
                                  <%= link_to 'View Post', post, class: "read-more"%>
                              </div>
                          </div>
                      </div>
                      <% end %>
                      <div class="page-item">
                       <%= paginate @posts %>
                       </div>
                 </div>                    
                   
                </div>
            </div>
        </div>
    </section>
    <!--/#blog-->
<%= render 'shared/footer' %>

