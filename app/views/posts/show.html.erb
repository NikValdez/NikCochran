<%= render 'shared/head'%>
<body>
 <%= render 'shared/menuNav'%>

<%= render 'shared/blogNav.js'%>
    <!-- Page Header -->


   <header class="masthead">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 mx-auto">
            <div class="site-heading">
                <h1 class="blog-heading"><%= @post.title %></h1>
                    <p class="post-meta">Posted by Nik Cochran on
              <%= @post.created_at.strftime("%m/%d/%y")%></p>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-8 mx-auto post-body">
            <p><%= sanitize @post.body %></p>
          </div>
        </div>
      </div>
    </article>
    <hr>
    <!-- Footer -->
    <div class="col-sm-12">
        <div class="copyright-text text-center">
            <p>&copy; Nik Cochran 2017. All Rights Reserved.</p>
            <p>Designed by <a target="_blank" href="https://github.com/NikValdez">Nik Cochran</a></p>
        </div>
    </div>  
    <% if current_admin_user %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
    <% else %>
    <% end %>  
	</body>
</html>












